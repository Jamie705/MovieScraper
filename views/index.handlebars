{{!-- Main Index --}}
<div id="main-title">
    <h2>Get all your Movie News!!</h2>
</div>

{{!-- articles --}}
<div class="row">
    <div class="col m4" id="notes">
    </div>
    <div id="card-articles col m8" >    
        <div id="articles">
            {{#each articles}}
            <h4>{{this.title}}</h4>
            <div class="card horizontal" id="hCard">  
                <div class="card-stacked">
                    <div class="card-content">
                        <p class="card-text" data-id="{{this.id}}">{{this.exerpt}}</p><br>
                    </div>
                    <div class="card-action">
                        <a href="https://screenrant.com/{{this.link}}">https://screenrant.com/{{this.link}}</a>     
                    </div>
                </div>
                <button class="waves-effect btn-small grey darken-2" id="delete" data-id="{{this.id}}">Delete</button>
            </div>
            <div>
                <h5 class="note-title"></h5>
                <p class="note-body"></p>
            </div>    
            {{/each}}
        </div>
    </div>
</div>