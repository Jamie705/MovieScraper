{{!-- Main Index --}}
<div id="main-title">
    <h1>Get all your Movie News!!</h1>
    <a href="/scrape">
        <button class="waves-effect waves-light btn-large light-blue darken-4" id="scrape">Latest Movie News</button>
    </a>
</div>

<div class= "row"  id="card-articles" >
    <div class="col m7" id="articles">
        {{#each articles}}
        <h4>{{this.title}}</h4>
        <div class="card horizontal">
            <div class="card-image">
                <img src="../images/filmStrip.jpg" height="250px" >
            </div>     
            <div class="card-stacked">
                <div class="card-content">
                    <p class="card-text" data-id="{{this.id}}">{{this.exerpt}}</p><br>
                </div>

                <div class="card-action">
                    <a href="https://screenrant.com/{{this.link}}">https://screenrant.com/{{this.link}}</a>     
                </div>
            </div>  
        </div>
        <div class="col-4" id="notes">
        </div>
        {{/each}}
    </div>
</div>